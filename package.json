{
  "name": "signalk-shelly2",
  "version": "2.1.0",
  "description": "Signal K Plugin For Shelly Gen 2+ devices",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --require ts-node/register",
    "prettier": "prettier --write .",
    "lint": "eslint --fix --format compact .",
    "ci-lint": "eslint && prettier --check .",
    "ci-test": "npm run build && npm run build:web && npm run test && npm run ci-lint",
    "format": "npm run prettier && npm run lint",
    "build": "tsc",
    "watch": "npm run build -- -w",
    "watch:web": "webpack --watch --mode development",
    "build:web": "webpack --mode=production"
  },
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-digital-switching",
    "signalk-category-hardware",
    "signalk-plugin-configurator"
  ],
  "author": "scott@scottbender.net",
  "license": "Apache-2.0",
  "dependencies": {
    "better-sse": "^0.15.1",
    "buffer": "^6.0.3",
    "camelcase": "^6.2.0",
    "mdns-js": "^1.0.3",
    "ws": "^8.18.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sbender9/signalk-shelly2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-react": "^7.10.4",
    "@signalk/server-api": "^2.7.2",
    "@tsconfig/node20": "^20.1.6",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.4",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/ws": "^8.18.1",
    "babel-loader": "^8.1.0",
    "chai": "^5.2.1",
    "css-loader": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-compact": "^8.40.0",
    "file-loader": "^6.1.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "proxyquire": "^2.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sinon": "^18.0.0",
    "style-loader": "^2.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "signalk-plugin-enabled-by-default": true
}
